<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewChatIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTabTitle"
        app:layout_constraintEnd_toStartOf="@+id/textViewTabTitle"
        app:layout_constraintTop_toTopOf="@+id/textViewTabTitle"
        app:srcCompat="@android:drawable/stat_notify_chat" />

    <TextView
        android:id="@+id/textViewTabTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat Room 1"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.304" />

    <TextView
        android:id="@+id/textViewLastMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/textViewTabTitle"
        app:layout_constraintStart_toStartOf="@+id/textViewTabTitle"
        app:layout_constraintTop_toBottomOf="@+id/textViewTabTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>